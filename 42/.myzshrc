autoload -Uz compinit promptinit
compinit
promptinit
prompt adam1

setopt HIST_IGNORE_DUPS
setopt autocd

export PATH=$HOME/local/bin:$PATH
export C_INCLUDE_PATH=$HOME/local/include:$HOME/.brew/include
export CPLUS_INCLUDE_PATH=$C_INCLUDE_PATH
export LIBRARY_PATH=$HOME/local/lib:$HOME/.brew/lib
export DYLD_FALLBACK_LIBRARY_PATH=$LIBRARY_PATH

alias ls='ls -FGh'
alias ll='ls -l'
alias la='ll -A'
alias grep='grep --color=auto'
alias egrep='egrep --color=auto'
alias gcc='gcc -Wall -Wextra -Werror'
alias g++='g++ -Wall -Wextra -Werror'
alias clang='clang -Wall -Wextra -Werror'
alias clang++='clang++ -Wall -Wextra -Werror'
alias e='emacs'

alias cheat='find . -maxdepth 1 -type f -name "*.c" -exec egrep -Hn --color=auto "\b[a-z]+\(" {} \;'
alias php='php -d error_reporting=E_ALL'

fh() {
	find -L /usr/include -type f -name "*.h" -exec grep --color=auto -Hn "$*" {} +
}

norme() {
	find -L $* -iregex ".*\.[ch]$" -exec \norminette {} +
}
