#!/bin/bash
if [[ $# -eq 0 ]]; then
	echo 'usage: sandbox command [...]' >&2
	exit 1
fi

readonly command=$1
shift

aur "$command" \
	--bind-rw="${XDG_CACHE_HOME:-$HOME/.cache}"/ccache:/build/.cache/ccache \
	--bind-rw="${XDG_CACHE_HOME:-$HOME/.cache}"/go-build:/build/.cache/go-build \
	--chroot \
	--ignore-arch \
	"$@"
